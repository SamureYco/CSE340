<header id="top-header">
  <div class="header-container">
    <span class="siteName">
      <a href="/" title="Return to Homepage">CSE Motors</a>
    </span>
    <div id="tools">
      <% if (locals.loggedin) { %>
        <span>Welcome, <%= locals.accountData.account_firstname %>!</span>
        <a href="/account/">Account Management</a>
