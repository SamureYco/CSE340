<%- include('../partials/header') %>

<main class="form-view">
  <h1>Add New Classification</h1>

  <% if (message) { %>
    <div class="flash-message"><%= message %></div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <ul class="form-errors">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name</label>
    <input type="text" id="classification_name" name="classification_name" pattern="^[A-Za-z0-9]+$" required>
    <p class="form-hint">No spaces or special characters allowed.</p>

    <button type="submit">Add Classification</button>
  </form>
</main>

<%- include('../partials/footer') %>
