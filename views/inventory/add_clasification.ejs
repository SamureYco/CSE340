<main>
    <h1>Add New Classification</h1>
    
    <% if (message) { %>
      <p class="flash-message"><%= message %></p>
    <% } %>
  
    <form class="classification-form" id="classificationForm" action="/inv/add-classification" method="POST">
      <label for="classification_name">Classification Name:</label>
      <input type="text" id="classification_name" name="classification_name" required pattern="^[a-zA-Z0-9]+$" title="Only letters and numbers allowed">
      
      <button type="submit">Add Classification</button>
    </form>
  </main>