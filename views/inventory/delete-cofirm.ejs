<main class="delete-container">
    <h1>Delete <%= inv_make %> <%= inv_model %></h1>

    <!-- Flash Message Display -->
    <% if (message) { %>
        <p class="flash-message"><%= message %></p>
    <% } %>

    <p class="delete-message"><strong>Confirm Deletion - The delete is permanent.</strong></p>

    <!-- Delete Confirmation Form -->
    <form class="delete-form" action="/inv/delete" method="POST">
        <label for="inv_make">Make:</label>
        <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" readonly>

        <label for="inv_model">Model:</label>
        <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" readonly>

        <label for="inv_year">Year:</label>
        <input type="number" id="inv_year" name="inv_year" value="<%= inv_year %>" readonly>

        <label for="inv_price">Price:</label>
        <input type="text" id="inv_price" name="inv_price" value="$<%= inv_price %>" readonly>

        <!-- Hidden Field for Inventory ID -->
        <input type="hidden" name="inv_id" value="<%= inv_id %>">

        <!-- Delete Button -->
        <button type="submit" class="delete-btn">Delete</button>
    </form>
</main>