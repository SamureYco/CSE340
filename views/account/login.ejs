<main>
    <div class="login-container">
        <h1><%= title %></h1>

        <!-- Flash Messages -->
        <% if (Array.isArray(messages) && messages.length > 0) { %>
            <div class="flash-message">
              <% messages.forEach(function(message) { %>
                <p><%= message %></p>
              <% }); %>
            </div>
        <% } %>

        <!-- Login Form -->
        <form id="loginForm" action="/account/login" method="POST">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address">

            <label for="password">Password</label>
            <input type="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" id="password" name="account_password" required>

            <button type="submit">Login</button>
        </form>

        <!-- Registration Link -->
        <p>Don't have an account? <a href="/account/register">Sign up here</a></p>
    </div>
</main>